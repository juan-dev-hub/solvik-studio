# Solvik SaaS - Production Environment Variables
# Copy this to .env on your UpCloud server

# Database (PostgreSQL en UpCloud)
DATABASE_URL="postgresql://solvik_user:TU_PASSWORD_SEGURO_AQUI@localhost:5432/solvik_saas"
POSTGRES_PASSWORD="TU_PASSWORD_SEGURO_AQUI"

# NextAuth
NEXTAUTH_URL="https://solvik.app"
NEXTAUTH_SECRET="tu-nextauth-secret-super-seguro-de-32-caracteres-minimo"

# Encryption (CRÍTICO: Genera uno nuevo para producción)
ENCRYPTION_SECRET="tu-clave-de-encriptacion-de-32-caracteres-exactos"

# Twilio (WhatsApp OTP) - REAL para producción
TWILIO_ACCOUNT_SID="tu-twilio-account-sid-real"
TWILIO_AUTH_TOKEN="tu-twilio-auth-token-real"
TWILIO_PHONE_NUMBER="tu-numero-whatsapp-business"

# Email (Resend) - REAL para producción
RESEND_API_KEY="tu-resend-api-key-real"
ADMIN_EMAIL="admin@solvik.app"

# Lemon Squeezy (Pagos) - REAL para producción
LEMON_SQUEEZY_API_KEY="tu-lemon-squeezy-api-key"
LEMON_SQUEEZY_STORE_ID="tu-store-id"
LEMON_SQUEEZY_WEBHOOK_SECRET="tu-webhook-secret"

# Cloudflare (DNS) - REAL para producción
CLOUDFLARE_API_TOKEN="tu-cloudflare-api-token"
CLOUDFLARE_ZONE_ID="tu-zone-id"

# Upload/Storage
UPLOAD_MAX_SIZE="10485760"
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/webp"

# Rate Limiting
OTP_RATE_LIMIT_MAX="5"
OTP_RATE_LIMIT_WINDOW="3600000"

# Admin Access (TUS DATOS REALES)
ADMIN_WHATSAPP_NUMBER="tu-numero-admin-real"
ADMIN_EMAIL_ADDRESS="tu-email-admin-real"

# Production Settings
NODE_ENV="production"